page{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.wrapper{
  width: 100%;
}
.wrapper text{
  display: block;
  font-size: 30rpx;
  padding: 50rpx 40rpx;
}
.wrapper .input{
  width: 90%;
  margin: 0 auto;
}
