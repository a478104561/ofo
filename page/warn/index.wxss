page{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}
.wrapper{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.top{
  width: 100%;
}
.top text{
  display: block;
  width: 100%;
  padding: 20rpx 0 20rpx 40rpx; 
}
.top .choise{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background-color: white;
  padding: 20rpx 100rpx;
}
.top .choise .xuan{
  padding: 20rpx 30rpx;
  border: 1px solid #b9dd08;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.top .choise .xuan:nth-child(1),.top .choise .xuan:nth-child(2){
  margin-top: 0;
}
.main{
  width: 100%;
}
.main text{
  display: block;
  width: 100%;
  padding: 20rpx 0 20rpx 40rpx; 
}
.main .img{
  width: 100%;
  background-color: white;
  padding: 30rpx 50rpx 0 40rpx;
}
.main .img image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: visible;
  vertical-align: top;
}
.main .img image icon{
  position: absolute;
  top: -18rpx;
  right: -18rpx;
}
.main .add{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  border: 1px dotted #b9dd08;
  font-size: 16rpx;
  text-align: center;
  line-height: 100rpx;
  padding: 0;
}
.foot{
  width: 100%;
  padding: 40rpx;
  margin-top: 50rpx;
  background-color: white;
}
.foot input:nth-child(2){
  padding-top: 30rpx;
}
button{
  width: 90%;
  margin-bottom: 50rpx;
  margin-top: 15rpx;
}